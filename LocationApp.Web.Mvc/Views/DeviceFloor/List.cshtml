@model List<LocationApp.Data.Dto.DeviceRoomDto>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    @Html.Partial("/Views/Shared/Partials/DataTable/_Css.cshtml")
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Katlara Ait Cihazlar </h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
                                    <div class="row">
                                        <div class="col-md-3 col-lg-3 col-sm-3 col-xs-12">
                                            <label style="padding-top:10px">Kullanıcı:</label>
                                        </div>
                                        <div class="col-md-9 col-lg-9 col-sm-9 col-xs-12">
                                            @Html.DropDownList("RoomID", new SelectList(ViewBag.Room, "RoomID", "Name", 0), new { @class = "form-control", @onchange = "dropValidation();" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
                                    <div class="row">
                                        <div class="col-md-3 col-lg-3 col-sm-3 col-xs-12">
                                            <label style="padding-top:10px">Departman:</label>
                                        </div>
                                        <div class="col-md-9 col-lg-9 col-sm-9 col-xs-12">
                                            @Html.DropDownList("DeviceID", new SelectList(ViewBag.Device, "DeviceID", "Name", 0), new { @class = "form-control", @onchange = "dropValidation();" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
                                    <div class="row">
                                        <div class="col-md-9 col-lg-9 col-sm-9 col-xs-12">
                                            <button name="save" class="btn btn-success pull-right" onclick="Add()"><i class="fa fa-plus-circle"></i> Kaydet</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                        </p>
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Oda:</th>
                                    <th>Cihaz Adı:</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RoomDto.Name</td>
                                        <td>@item.DeviceDto.Name</td>
                                        <td><button type="button" class="btn btn-round btn-info"><i class="fa fa-trash fa-hover"></i><span class="text-muted"></span></button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<!-- Modal -->
@section Scripts{
    @Html.Partial("/Views/Shared/Partials/DataTable/_Js.cshtml")
    <script type="text/javascript">function Remove(Id) {
            var con = confirm("Silmek istediğinize emin misiniz ?");
            if (con) {
                $.ajax({
                    url: '/UserTitle/Remove',
                    type: "POST",
                    dataType: "json",
                    data: { Id: Id },
                    success: function (result) {
                        if (result.Result) {
                            alert("İşlem Başarılı");
                            location.reload();
                        } else {
                            alert(result.ResultDescription);
                        }
                    }
                });
            }
        }
        function Add() {
            var RoomID = $("#RoomID").val();
            var DeviceID = $("#DeviceID").val();
            $.ajax({
                url: '/DeviceFloor/AddFloor',
                type: "POST",
                dataType: "json",
                data: { RoomID: RoomID, DeviceID: DeviceID },
                success: function (result) {
                    if (result.Result) {
                        alert("İşlem Başarılı");
                        location.reload();
                    } else {
                        alert(result.ResultDescription);
                    }
                }
            });
        }</script>
}
