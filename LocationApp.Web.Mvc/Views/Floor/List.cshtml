@model List<LocationApp.Data.Dto.FloorDto>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Html.Partial("/Views/Shared/Partials/DataTable/_Css.cshtml")
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Lokasyon <small> Kat</small></h3>
            </div>
            <div class="title_right pull-right">
                <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 form-group pull-right">
                    <div class="input-group pull-right">
                        <a href="~/Floor/Create" class="btn btn-success pull-right "><i class="fa fa-plus-circle"></i> Yeni</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Katlar<small></small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                        </p>
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Kat Başlık</th>
                                    <th>Bina</th>
                                    <th>Blok</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            @if (item.BuildID != 0)
                                            {
                                                <text>@item.BuildDto.Name</text>
                                            }
                                            else
                                            { <text>(-)</text>}
                                        </td>
                                        <td>
                                            @if (item.BlockID != 0)
                                            {
                                                <text>@item.BlockDto.Name</text>
                                            }
                                            else
                                            { <text>(-)</text>}
                                        </td>
                                        <td>
                                            <a href="/Floor/set/@item.FloorID" class="btn btn-round btn-danger"><i class="fa fa-edit fa-hover"></i><span class="text-muted"></span></a>
                                            <button type="button" onclick="Remove(@item.FloorID)" class="btn btn-round btn-info"><i class="fa fa-trash fa-hover"></i><span class="text-muted"></span></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
@section Scripts{
    @Html.Partial("/Views/Shared/Partials/DataTable/_Js.cshtml")
    <script type="text/javascript">
        function Remove(Id) {
            var con = confirm("Silmek istediğinize emin misiniz ?");
            if (con) {
                $.ajax({
                    url: '/Floor/Remove',
                    type: "POST",
                    dataType: "json",
                    data: { Id: Id },
                    success: function (result) {
                        if (result.Result) {
                            alert("İşlem Başarılı");
                            location.reload();
                        } else {
                            alert(result.ResultDescription);
                        }
                    }
                });
            }
        }
    </script>
}
